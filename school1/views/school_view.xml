<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_school" model="ir.actions.act_window">
        <field name="name">school</field>
        <field name="res_model">school</field>
        <field name="view_mode">tree,form,kanban,graph</field>
    </record>

   <menuitem id="school_root_menu" name="School"/>

   <menuitem id="school_sub1111_menu" name="Home Page" parent="school_root_menu" action="action_home" sequence="1"/>

   <menuitem id="school_sub1112_menu" name="School Infrastructure" parent="school_sub1111_menu" action="action_school_infrastructure"/>


   <menuitem id="school_sub1_menu" name="Director" parent="school_root_menu" action="action_director"/>






   <menuitem id="school_sub2_menu" name="Student" parent="school_root_menu" action="action_school"/>
   <menuitem id="school_sub2_1_menu" name="Student Information" parent="school_sub2_menu" action="action_student"/>
   <menuitem id="school_sub2_2menu" name="Student Appointment" parent="school_sub2_menu" action="action_student_appointment"/>


   <menuitem id="school_sub3_menu" name="Teachers" parent="school_root_menu" action="action_school"/>
   <menuitem id="school_sub3_1menu" name="Teachers Information" parent="school_sub3_menu" action="action_teacher"/>
    <menuitem id="school_sub3_11menu" name="Our Faculties" parent="school_sub3_menu" action="action_faculties"/>


   <menuitem id="school_sub43_menu" name="Contact Us" parent="school_root_menu" action="action_contact_us"/>
   <menuitem id="school_sub43_1_menu" name="Mail Us" parent="school_sub43_menu" action="action_mail_us"/>


   <menuitem id="school_sub53_menu" name="Student Result" parent="school_sub2_menu" action="action_result"/>



   <menuitem id="school_sub63_menu" name="Admissions Open" parent="school_root_menu" action="action_admission"/>

   <menuitem id="school_sub73_menu" name="Toppers" parent="school_root_menu" action="action_toppers"/>


   <menuitem id="school_sub83_menu" name="Alumni" parent="school_root_menu" action="action_alumni"/>


   <menuitem id="school_sub93_menu" name="Events" parent="school_root_menu" action="action_alumni"/>
   <menuitem id="school_sub93_1menu" name="Registration" parent="school_sub93_menu" action="action_registration"/>

   <menuitem id="school_sub931_1menu" name="Fees Structure" parent="school_root_menu" action="action_fees"/>

    <menuitem id="school_sub91_1menu" name="Facilities" parent="school_root_menu" action="action_fees"/>

    <menuitem id="school_sub91_11menu" name="Canteen Facilities" parent="school_sub91_1menu" action="action_canteen"/>
    <menuitem id="school_sub921_11menu" name="Canteen menu" parent="school_sub91_1menu" action="action_canteen_menu"/>
    <menuitem id="school_sub911_11menu" name="Library" parent="school_sub91_1menu" action="action_library"/>
    <menuitem id="school_sub911_12menu" name="Sports room" parent="school_sub91_1menu" action="action_sports"/>
    <menuitem id="school_sub911_13menu" name="Smart class room" parent="school_sub91_1menu" action="action_smart_class"/>
   <record id="school_list_view" model="ir.ui.view">
      <field name="name">school.tree</field>
      <field name="model">school</field>
      <field name="arch" type="xml">
         <tree>
            <field name="name"/>
            <field name="LastName"/>
            <field name="ContactNo"/>
            <field name="Address"/>
            <field name="booleaa" widget="boolean_toggle"/>
         </tree>
      </field>
   </record>




   <record id="school_form_view" model="ir.ui.view">
      <field name="name">school.form</field>
      <field name="model">school</field>
      <field name="arch" type="xml">
         <form >
            <sheet>
                <widget name="web_ribbon" title="Student" bg_color="bg-danger"/>
               <group>
               <field name="name"/>
               <field name="LastName"/>
               <field name="ContactNo"/>
               <field name="Address"/>
               <field name="image" widget="image"/>
               <field name="booleaa" widget="boolean_toggle"/>
               </group>
            </sheet>
         </form>
      </field>
   </record>







<record id="school_kanban_view" model="ir.ui.view">
            <field name="name">school.kanban</field>
            <field name="model">school</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="LastName"/>
                    <field name="ContactNo"/>
                    <field name="Address"/>
                    <field name="image" widget="image"/>
                    <field name="booleaa" widget="boolean_toggle"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">

                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                           Name: <field name="name"/>
                                        </li>
                                        <li>
                                            Lastname:<field name="LastName"/>
                                        </li>
                                        <li>
                                            Contact No:<field name="ContactNo"/>
                                        </li>
                                        <li>
                                             Photo: <field name="image" widget="image"/>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>




</odoo>
