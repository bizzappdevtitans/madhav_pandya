<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_contact_us" model="ir.actions.act_window">
        <field name="name">contact_us</field>
        <field name="res_model">contact_us</field>
        <field name="view_mode">tree,form</field>
    </record>



<record id="contact_us_list_view" model="ir.ui.view">
      <field name="name">contact_us.tree</field>
      <field name="model">contact_us</field>
      <field name="arch" type="xml">

         <tree>
            <field name="name"/>
            <field name="LastName"/>
            <field name="email"/>
            <field name="ContactNo"/>
            <field name="priority" widget="priority" class="mr-3"/>
            <field name="color" widget="color_picker"/>

         </tree>
      </field>
   </record>

<record id="contact_us_form_view" model="ir.ui.view">
      <field name="name">contact_us.form</field>
      <field name="model">contact_us</field>
      <field name="arch" type="xml">
         <form >
            <sheet>
                <widget name="web_ribbon" title="Contact Us" bg_color="bg-danger"/>
               <group>
               <field name="name"/>
               <field name="LastName"/>
               <field name="ContactNo"/>
               <field name="email"/>
               <field name="color" widget="color_picker"/>
               <field name="priority" widget="priority" class="mr-3"/>
               </group>
            </sheet>
         </form>
      </field>
   </record>


    <record id="action_mail_us" model="ir.actions.act_window">
        <field name="name">mail_us</field>
        <field name="res_model">mail_us</field>
        <field name="view_mode">tree,form</field>
    </record>



<record id="mail_us_list_view" model="ir.ui.view">
      <field name="name">mail_us.tree</field>
      <field name="model">mail_us</field>
      <field name="arch" type="xml">

         <tree>
            <field name="name"/>
            <field name="address"/>
            <field name="ContactNo"/>
            <field name="email"/>
            <field name="subject"/>
            <field name="message"/>

         </tree>
      </field>
   </record>


   <record id="mail_us_form_view" model="ir.ui.view">
      <field name="name">mail_us.form</field>
      <field name="model">mail_us</field>
      <field name="arch" type="xml">
         <form >
            <div>
                <img src="/school1/static/description/mail_us.png" style="height:45%;width:100%;" />
            </div>
            <sheet>
               <group>
               <field name="name"/>
               <field name="address"/>
               <field name="ContactNo"/>
               <field name="email"/>
               <field name="subject"/>
               <field name="message"/>
               </group>
            </sheet>
         </form>
      </field>
   </record>





</odoo>
