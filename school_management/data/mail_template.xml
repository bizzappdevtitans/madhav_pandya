<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <record id="student_card_email_template" model="mail.template">
            <field name="name">Birthday Card: Send by email</field>
            <field name="model_id" ref="model_student"/>
            <field name="email_from">madhavpandyapm@gmail.com</field>
            <field name="email_to">{{object.email}}</field>
            <field name="subject">Birthday Card  {{object.reference_no}}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear
        <t t-if="{object.name}"/>
        <br /><br />
        Many many happy returns of the day, Happy Birthday to you
        <br /><br />
        Enjoy your day......
    </p>
</div>
</field>
            <field name="report_template" ref="student_report"/>
            <field name="report_name">Birthday Card{{object.reference_no}}</field>
        </record>
</data>
</odoo>
