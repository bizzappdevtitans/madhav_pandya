<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_toppers" model="ir.actions.act_window">
        <field name="name">toppers</field>
        <field name="res_model">toppers</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="toppers_list_view" model="ir.ui.view">
      <field name="name">toppers.tree</field>
      <field name="model">toppers</field>
      <field name="arch" type="xml">

         <tree>
            <field name="name_id" decoration-primary="1" decoration-bf="1"/>
            <field name="standard" decoration-info="1" decoration-bf="1"/>
            <field name="scored" decoration-warning="1" decoration-bf="1"/>
            <field name="image" widget="image" options="{'size': [100, 100]}" />

         </tree>
      </field>
   </record>


   <record id="toppers_form_view" model="ir.ui.view">
      <field name="name">toppers.form</field>
      <field name="model">toppers</field>
      <field name="arch" type="xml">
         <form >
            <sheet>
                <widget name="web_ribbon" title="Toppers" bg_color="bg-success"/>
               <group>
               <field name="name_id"/>
               <field name="standard"/>
               <field name="scored"/>
               <field name="image" class="oe_avatar" widget="image"/>
               </group>
            </sheet>
         </form>
      </field>
   </record>

   <record id="toppers_search" model="ir.ui.view">
        <field name="name">toppers.search</field>
        <field name="model">toppers</field>
        <field name="arch" type="xml">
            <search>
               <field name="name_id"/>
               <field name="standard"/>
               <field name="scored"/>
               <field name="image" class="oe_avatar" widget="image"/>
                <searchpanel>
                    <field name="standard" string="Standard" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>



