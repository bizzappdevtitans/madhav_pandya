<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_director" model="ir.actions.act_window">
        <field name="name">director</field>
        <field name="res_model">director</field>
        <field name="view_mode">tree,form</field>
    </record>


<record id="director_list_view" model="ir.ui.view">
      <field name="name">director.tree</field>
      <field name="model">director</field>
      <field name="arch" type="xml">

         <tree>
            <field name="name"/>
            <field name="lastname"/>
            <field name="email"/>
            <field name="contact_no"/>
            <field name="experience"/>
            <field name="department"/>
            <field name="image" widget="image" options="{'size': [100, 100]}"/>
            <field name="aadhar" widget="image" options="{'size': [100, 100]}"/>

         </tree>
      </field>
   </record>

<record id="director_form_view" model="ir.ui.view">
      <field name="name">director.form</field>
      <field name="model">director</field>
      <field name="arch" type="xml">
         <form >
            <sheet>
                <widget name="web_ribbon" title="Director" bg_color="bg-danger"/>
               <group>
               <field name="name" placeholder="Enter your name "/>
               <field name="lastname" placeholder="Enter your lastname"/>
               <field name="contact_no" placeholder="Enter your contact no"/>
               <field name="email" placeholder="Enter your email"/>
               <field name="experience" placeholder="Enter your experience"/>
               <field name="department" placeholder="Enter your department"/>
                <field name="image" class="oe_avatar" widget="image"/>
                <field name="aadhar" class="oe_avatar" widget="image"/>
               </group>
            </sheet>
         </form>
      </field>
   </record>
</odoo>
