<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_result" model="ir.actions.act_window">
        <field name="name">result</field>
        <field name="res_model">result</field>
        <field name="view_mode">tree,form</field>
    </record>



<record id="action_mark_as_done1" model="ir.actions.server">
            <field name="name">Mark as Pass</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_result"/>
            <field name="binding_model_id" ref="model_result"/>
            <field name="code">
                for record in records:
                    if record.state=='pass':
                        record.action_done()
            </field>
</record>
<record id="result_list_view" model="ir.ui.view">
      <field name="name">result.tree</field>
      <field name="model">result</field>
      <field name="arch" type="xml">

         <tree>
            <field name="name"/>
            <field name="sub1"/>
            <field name="sub2"/>
            <field name="sub3"/>
            <field name="sub4"/>
            <field name="total"/>
            <field name="percent" widget="percentpie"/>
            <field name="state" widget="badge" decoration-success = " state == 'pass'" decoration-danger = " state == 'fail'"/>
            <field name="record"/>

         </tree>
      </field>
   </record>


  <record id="result_form_view" model="ir.ui.view">
      <field name="name">result.form</field>
      <field name="model">result</field>
      <field name="arch" type="xml">
         <form >
            <header>

            </header>
            <sheet>
                <widget name="web_ribbon" title="Result" bg_color="bg-danger"/>
                <h1><field name="reference_no"/></h1>

               <group>
                <field name="name" placeholder="Enter your name"/>
               <field name="sub1" placeholder="Enter marks"/>
               <field name="sub2" placeholder="Enter marks"/>
               <field name="sub3" placeholder="Enter marks"/>
               <field name="sub4" placeholder="Enter marks"/>
               <field name="total"/>
               <field name="percent"/>
               <field name="state" widget="badge" decoration-success = " state == 'pass'"/>
               <field name="record"/>
                <button name="action_url" type="object" string="Website" class="oe_highlight"/>
               </group>
            </sheet>
         </form>
      </field>
   </record>




    <data>
        <record id="student_result_sequence" model="ir.sequence">
            <field name="name">Result Sequence</field>
            <field name="code">result</field>
            <field name="prefix">RS</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>

</odoo>
