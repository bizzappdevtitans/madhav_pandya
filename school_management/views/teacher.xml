<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_teacher" model="ir.actions.act_window">
        <field name="name">teacher</field>
        <field name="res_model">teacher</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>



<record id="student_list_view" model="ir.ui.view">
      <field name="name">teacher.tree</field>
      <field name="model">teacher</field>
      <field name="arch" type="xml">
         <tree>
            <field name="name"/>
            <field name="lastname"/>
            <field name="contact_no" groups="school_management.group_school_teacher"/>
            <field name="address" groups="school_management.group_school_teacher"/>
            <!-- <field name="student_name1" /> -->
            <field name="email" groups="school_management.group_school_teacher"/>
            <field name="subject"/>
            <field name="image" widget="image" options="{'size': [100, 100]}" />
            <field name="degree"/>

         </tree>
      </field>
   </record>




<record id="teacher_form_view" model="ir.ui.view">
      <field name="name">teacher.form</field>
      <field name="model">teacher</field>
      <field name="arch" type="xml">
         <form>

            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="action_open_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                        <div class="o_stat_info">
                            <field name="appointment_count"/>
                            <span class= "o_stat_text">
                               <b> Students</b>

                            </span>
                        </div>
                    </button>


                </div>

               <widget name="web_ribbon" title="Teacher" bg_color="bg-danger"/>
               <group>
               <field name="name"/>
               <field name="lastname"/>
               <field name="contact_no" groups="school_management.group_school_teacher"/>
               <field name="address" groups="school_management.group_school_teacher"/>
               <field name="email" groups="school_management.group_school_teacher"/>
               <field name="image" class="oe_avatar" widget="image" />
               <field name="subject"/>
               <field name="degree" groups="school_management.group_school_teacher"/>
               <field name="name_ids" groups="school_management.group_school_teacher"/>

               </group>
               <notebook>
                <page string="Apply for Leave">
                    <field name="leave"/>
                </page>
                <page string="Reason for Leave">
                    <field name="reason"/>
                </page>

               </notebook>
            </sheet>
         </form>
      </field>
</record>


<record id="teacher_kanban_view" model="ir.ui.view">
            <field name="name">teacher.kanban</field>
            <field name="model">teacher</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="lastname"/>
                    <field name="contact_no"/>
                    <field name="address"/>
                    <field name="image" widget="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">

                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                           Name: <field name="name"/>
                                        </li>
                                        <li>
                                            lastname:<field name="lastname"/>
                                        </li>
                                        <li>
                                            Contact No:<field name="contact_no"/>
                                        </li>
                                        <li>
                                             Photo: <field name="image" widget="image"/>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>






