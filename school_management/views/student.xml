<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">student</field>
        <field name="res_model">student</field>
        <field name="view_mode">tree,form,kanban,search</field>
    </record>


 <record id="action_mark_as_done" model="ir.actions.server">
            <field name="name">Mark as Done</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_student"/>
            <field name="binding_model_id" ref="model_student"/>
            <field name="code">
                for record in records:
                    if record.state=='confirm':
                        record.action_done()
            </field>
</record>



<record id="student_list_view1" model="ir.ui.view">
      <field name="name">student.tree</field>
      <field name="model">student</field>
      <field name="arch" type="xml">
         <tree>
            <field name="reference_no"/>
            <field name="name"  decoration-bf="1" optional="show"/>
            <field name="lastname" decoration-it="1" optional="hide"/>
            <field name="contact_no" decoration-success="1" optional="show"/>
            <field name="address" decoration-warning="1"/>
            <field name="percentage" widget="percentpie"/>
            <!-- <field name="age"/> -->
            <field name="email"/>
            <!-- <field name="image" widget="image" options="{'size': [100, 100]}"/> -->
            <!-- <field name="course" widget="percentpie"/> -->
            <!-- <field name="date_of_birth"/> -->
            <field name="gender" widget="badge"/>
            <field name="state" widget="badge"/>
            <field name="birthday"/>
            <!-- <field name="progress" widget="progressbar"/> -->
         </tree>
      </field>
   </record>


 <record id="student_form_view" model="ir.ui.view">
      <field name="name">student.form</field>
      <field name="model">student</field>
      <field name="arch" type="xml">
         <form>
            <!-- <header>

            </header> -->
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="action_open_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                        <div class="o_stat_info">
                            <field name="appointment_count"/>
                            <span class= "o_stat_text">
                               <b> Teachers</b>
                            </span>
                        </div>
                    </button>
                            <button name="action_open_appointmentss" type="object" class="oe_stat_button" icon="fa-bookmark">
                        <div class="o_stat_info">
                            <field name="appointment_count1"/>
                            <span class= "o_stat_text">
                               <b> Results</b>

                            </span>

                    </div>



                    </button>


                </div>


               <widget name="web_ribbon" title="Student" bg_color="bg-danger"/>
               <!--<div class="oe_title">
                     <h1>
                        <field name="priority" widget="priority" class="mr-3"/>
                    </h1>
                </div> -->
               <group>
                <h1> <field name="reference_no"/></h1>
                  <group name="details">
                     <field name="name" widget="char_emojis" default_focus="1"/>
                     <field name="lastname" />
                     <field name="contact_no"/>
                     <field name="date_of_birth"/>
                     <field name= "birthday"/>
                     <field name="age"/>
                     <field name="address"/>
                     <field name="email"/>
                     <field name="percentage"/>
                     <field name="name_ids" widgets="many2many_checkboxes"/>
                     <field name="result_ids"/>
                     <field name="image"  class="oe_avatar" widget="image"/>

                  </group>
                  <group string="Other Information" name="other_info">
                    <!-- <field name="course" widget="percentpie"/> -->
                     <field name="gender"/>
                     <!-- <field name="currency_id"/> -->
                     <!-- <field name="state" decoration-success="state=='done'" decoration-info="state in ('draft','cancelled')" widget="badge"/> -->
                     <field name="fee" widget="monetary"/>
                     <!-- <field name="total_fees" widget="percentage" invisible="0"/> -->
                     <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                     <field name="progress" widget="progressbar"/>

                     <field name="parent"/>
                     <field name="marital_status" widget="radio"/>
                     <field name="partner_name" attrs="{'invisible': [('marital_status','=','unmarried')] }"/>
                     <button name="action_url" type="object" string="Website" class="oe_highlight"/>
                  </group>
               </group>
               <notebook>
                <page string="Apply for Leave">
                    <field name="leave"/>
                </page>
                <page string="Reason for Leave">
                    <field name="reason"/>
                </page>

               </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower" group="base.group_user"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
         </form>
      </field>
   </record>



  <record id="student_search" model="ir.ui.view">
        <field name="name">student.search</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <!-- <field name="age"/> -->
                <field name="gender"/>
                <filter name="filter_male" string="Male" domain="[('gender', '=' , 'male')]"/>
                <separator/>
                <filter name="filter_female" string="Female" domain="[('gender', '=' , 'female')]"/>
                <searchpanel>
                    <field name="gender" string="Gender" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>





   <record id="student_kanban_view" model="ir.ui.view">
            <field name="name">student.kanban</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="lastname"/>
                    <field name="contact_no"/>
                    <field name="address"/>
                    <field name="name_ids"/>
                    <field name="image" widget="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">

                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                           Name: <field name="name"/>
                                        </li>
                                        <li>
                                            lastname:<field name="lastname"/>
                                        </li>
                                        <li>
                                            Contact No:<field name="contact_no"/>
                                        </li>
                                        <li>
                                             Photo: <field name="image" widget="image"/>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


    <data>
        <record id="student_sequence" model="ir.sequence">
            <field name="name">Student Sequence</field>
            <field name="code">student</field>
            <field name="prefix">MP</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>




</odoo>
