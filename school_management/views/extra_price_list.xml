<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_extra_price_list" model="ir.actions.act_window">
        <field name="name">extra_price_list</field>
        <field name="res_model">extra.price.list</field>
        <field name="view_mode">tree,form</field>
    </record>


<record id="extra_price_list_view" model="ir.ui.view">
      <field name="name">extra_price_list_view</field>
      <field name="model">extra.price.list</field>
      <field name="arch" type="xml">

         <tree>
            <field name="name"/>
            <field name="price"/>

         </tree>
      </field>
   </record>


<record id="extra_price_list_form_view" model="ir.ui.view">
      <field name="name">extra_price_form</field>
      <field name="model">extra.price.list</field>
      <field name="arch" type="xml">
         <form >
            <sheet>
               <group>
               <field name="name" placeholder="Enter your name "/>
               <field name="price" />
           </group>
            </sheet>
         </form>
      </field>
   </record>
</odoo>
