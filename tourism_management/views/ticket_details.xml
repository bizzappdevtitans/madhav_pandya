<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_ticket_details" model="ir.actions.act_window">
        <field name="name">ticket_details</field>
        <field name="res_model">ticket_details</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="ticket_details_list_view" model="ir.ui.view">
      <field name="name">ticket_details.tree</field>
      <field name="model">ticket_details</field>
      <field name="arch" type="xml">

         <tree>

            <field name="reference_no"/>
            <field name="tour_name"/>
            <field name="customer"/>
            <field name="sales_person"/>
            <field name="tax_excluded"/>
            <field name="tax"/>
            <field name="total"/>



         </tree>
      </field>
   </record>


    <record id="ticket_details_form_view" model="ir.ui.view">
      <field name="name">ticket_details_form</field>
      <field name="model">ticket_details</field>
      <field name="arch" type="xml">
         <form >
            <sheet>
                <widget name="web_ribbon" title="Ticket Details" bg_color="bg-success"/>
               <group>
                    <field name="reference_no"/>
                    <field name="tour_name"/>
                    <field name="customer"/>
                    <field name="sales_person"/>
                    <field name="tax_excluded"/>
                    <field name="tax"/>
                    <field name="total"/>
                </group>

            </sheet>
         </form>
      </field>
   </record>
</odoo>
