<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_information_line" model="ir.actions.act_window">
        <field name="name">information_line</field>
        <field name="res_model">information.line</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="information_line_list_view" model="ir.ui.view">
      <field name="name">information_line.tree</field>
      <field name="model">information.line</field>
      <field name="arch" type="xml">

         <tree>

            <field name="start_place"/>
            <field name="end_place"/>
            <field name="transport_type"/>
            <field name="travel_class"/>
            <field name="distance"/>
            <field name="fare"/>

         </tree>
      </field>
   </record>

   <record id="information_line_form_view" model="ir.ui.view">
      <field name="name">information_line_form</field>
      <field name="model">information.line</field>
      <field name="arch" type="xml">
         <form >
            <sheet>
                <widget name="web_ribbon" title="Information Line" bg_color="bg-success"/>
               <group>
                    <field name="start_place"/>
                    <field name="end_place"/>
                    <field name="transport_type" />
                    <field name="travel_class" />
                    <field name="distance"/>
                    <field name="fare"/>
                </group>

            </sheet>
         </form>
      </field>
   </record>
</odoo>
