<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_tour_description" model="ir.actions.act_window">
        <field name="name">tour_description</field>
        <field name="res_model">tour_description</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="tour_description_list_view" model="ir.ui.view">
      <field name="name">tour_description.tree</field>
      <field name="model">tour_description</field>
      <field name="arch" type="xml">

         <tree>
            <field name="tour_code"/>
            <field name="tour_nights"/>
            <field name="tour_day_description"/>
            <field name="breakfast" />
            <field name="lunch" />
            <field name="dinner" />

         </tree>
      </field>
   </record>


   <record id="tour_description_form_view" model="ir.ui.view">
      <field name="name">tour_description_form</field>
      <field name="model">tour_description</field>
      <field name="arch" type="xml">
         <form >
            <sheet>
                <widget name="web_ribbon" title="Customer Review" bg_color="bg-success"/>
               <group>
                  <field name="tour_code"/>
                  <field name="tour_nights"/>
                  <field name="tour_day_description"/>
                  <field name="breakfast" />
                  <field name="lunch" />
                  <field name="dinner" />
                </group>

            </sheet>
         </form>
      </field>
   </record>
</odoo>
